---
import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/MainLayout.astro";
import BlogPost from "../components/BlogPost.astro";

// https://docs.astro.build/en/reference/api-reference/
const posts = await Astro.glob("./posts-old/*.{md,mdx}");
// si quisieramos hacer una paginacion, tomamos todos los post y lo mandamos a llamar por el getStaticPaths, le mandamos la pagination y gg
// console.log(posts);
---

<MainLayout title="Home">
  <!-- component -->
  <section class=":bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
        {siteConfig.title}
      </h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {posts.map((post) => <BlogPost {...post} />)}
      </div>
    </div>
  </section>
</MainLayout>
